@page "/EzanSetup"
@using AndroidMujezin.Modeli;

<h3>Postavke za ezane</h3>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
        <div class="form-check">
            <label class="form-check-label" for="Ezani">
                <span class="lead">Ezan za zoru (sabah)</span>
            </label>
                <input class="form-check-input" type="checkbox" @bind="zora.Ezani" id="Ezani">
            
        </div>
    </div>
        <div class="col-6">
    <div class="input-group">
      <div class="input-group-text">Korekcija minuta: </div>
                <input type="number" class="form-control" id="KorekcijaMinta" @bind="zora.KorekcijaMinta" min="0" max="100" placeholder="Korekcija minuta">
    </div>
  </div>
</div>
    <div class="row">

        <div class="col-6">
        <div class="form-check">
            <label class="form-check-label" for="Notifikuj">
                <span class="lead">Obavjesti me za zoru</span>
            </label>
                <input class="form-check-input" type="checkbox" @bind="zora.Notifikuj" id="Notifikuj">
        </div>
    </div>
        <div class="col-6">
        <div class="input-group">
                <div class="input-group-text">Korekcija minuta: </div>
                <input type="number" class="form-control" id="NotifikujMinutaPrije" @bind="zora.NotifikujMinutaPrije" min="0" max="100" placeholder="Korekcija minuta">
        </div>
    </div>
    
    </div>
<div class="row ">
        <div class="col-12">
    <div class="input-group">
        <label class="input-group-text" for="NotifikujMinutaPrije">Audio zean:</label>
        <select class="form-select" aria-label="Default select example">
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </div>
    </div>
</div>
<hr />
<div class="row">
        <label for="Volume" class="form-label">Jačina zvuka ezana (volume: @zora.Volume %)</label>
        <input type="range" class="form-range" id="Volume" @bind="zora.Volume">
    </div>
<hr />
    <hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <div class="form-check">
                    <label class="form-check-label" for="Ezani">
                        <span class="lead">Ezan za izlazak sunca</span>
                    </label>
                    <input class="form-check-input" type="checkbox" @bind="izlazak.Ezani" id="Ezani">

                </div>
            </div>
            <div class="col-6">
                <div class="input-group">
                    <div class="input-group-text">Korekcija minuta: </div>
                    <input type="number" class="form-control" id="KorekcijaMinta" @bind="izlazak.KorekcijaMinta" min="0" max="100" placeholder="Korekcija minuta">
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-6">
                <div class="form-check">
                    <label class="form-check-label" for="Notifikuj">
                        <span class="lead">Obavjesti me za zoru</span>
                    </label>
                    <input class="form-check-input" type="checkbox" @bind="izlazak.Notifikuj" id="Notifikuj">
                </div>
            </div>
            <div class="col-6">
                <div class="input-group">
                    <div class="input-group-text">Korekcija minuta: </div>
                    <input type="number" class="form-control" id="NotifikujMinutaPrije" @bind="izlazak.NotifikujMinutaPrije" min="0" max="100" placeholder="Korekcija minuta">
                </div>
            </div>

        </div>
        <div class="row ">
            <div class="col-12">
                <div class="input-group">
                    <label class="input-group-text" for="NotifikujMinutaPrije">Audio zean:</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <label for="Volume" class="form-label">Jačina zvuka ezana (volume: @izlazak.Volume %)</label>
            <input type="range" class="form-range" id="Volume" @bind="izlazak.Volume">
        </div>

        <hr />
    </div>
    <hr />
</div>


@code {
    public NamazModel zora = new NamazModel() { Namaz = NamazEnum.Zora };
    public NamazModel izlazak = new NamazModel() { Namaz = NamazEnum.IzlazakSunca };
    public NamazModel podne = new NamazModel() { Namaz = NamazEnum.Podne };
    public NamazModel dzuma = new NamazModel() { Namaz = NamazEnum.Dzuma };
    public NamazModel ikindija = new NamazModel() { Namaz = NamazEnum.Ikindija };
    public NamazModel aksam = new NamazModel() { Namaz = NamazEnum.Aksam };
    public NamazModel jacija = new NamazModel() { Namaz = NamazEnum.Jacija };
    
    
}
   